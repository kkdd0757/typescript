{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES5",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "noImplicitAny": true,
    "typeRoots": ["./node_modules/@types", "types"],
    "strict": true
    // "strictFunctionTypes": true
  },
  "include": ["./src/**/*"], // 해당 디렉토리의 파일들을 ts -> js로 변경해줄것.
  "exclude": ["node_modules", "dist"]
}
